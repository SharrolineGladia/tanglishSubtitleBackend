FROM python:3.9.13

WORKDIR /app

RUN apt-get update && apt-get install -y \
    ffmpeg \
    wget \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

EXPOSE 7860

ENV FLASK_APP=app.py
ENV FLASK_ENV=production

# Try this command first
CMD ["python", "app.py"]